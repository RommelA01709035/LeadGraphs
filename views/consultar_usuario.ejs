<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultar Usuarios</title>
    <!-- Enlace a Bulma CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    <style>
        /* Estilo personalizado para la sombra de la tabla */
        .table-shadow {
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Ajusta los valores según prefieras */
        }

        /* Estilo personalizado para cambiar el color de los botones */
        .custom-button {
            background-color: #F649D0;
            color: white;
            transition: background-color 0.3s ease; /* Transición suave del color de fondo */
        }

        /* Cambia el color de fondo cuando se pasa el cursor sobre el botón */
        .custom-button:hover {
            background-color: #F8C9EE; /* Cambia el color a un tono más claro */
            color: white;
        }

        .notification-container {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1000; 
        }


    </style>
</head>
<body>
    <section class="section">
        <div class="container">
            <div class="notification-container">
                <% if (message) { %>
                    <div class="notification is-success">
                        <%= message %>
                        <button class="delete" aria-label="delete"></button>
                    </div>
                <% } %>
            </div>
            <h1 class="title">Consultar Usuarios</h1>
            <table class="table is-bordered is-striped is-fullwidth table-shadow">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Teléfono</th>
                        <th>ID</th>
                        <th class="is-narrow">Acciones</th> 
                    </tr>
                </thead>
                <tbody>
                    <% usuario.forEach(user => { %>
                        <% const rowClass = user.Habilitado === 0 ? 'has-background-danger' : ''; %>
                        <tr class="<%= rowClass %>">
                            <td><%= user.nombre_usuario %></td>
                            <td><%= user.Correo %></td>
                            <td><%= user.Celular %></td>
                            <td><%= user.IDUsuario %></td>
                            <td class="is-narrow">
                                <form class="box" action="/delete-usuario" method="POST">
                                    <input type="hidden" name="nombre" value="<%= user.nombre_usuario %>">
                                    <input type="hidden" name="id" value="<%= user.IDUsuario %>">
                                    <div class="field is-grouped">
                                        <div class="control">
                                            <button class="button is-primary" type="submit" onclick="return confirm('¿Estás seguro de que deseas modificar este usuario?')">Modificar Usuario</button>
                                        </div>
                                        <div class="control">
                                            <button class="button is-danger" type="submit" onclick="return confirm('¿Estás seguro de que deseas eliminar este usuario?')">Eliminar Usuario</button>
                                        </div>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </section>
</body>
</html>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const notifications = document.querySelectorAll('.notification');

        notifications.forEach(notification => {
            const closeButton = notification.querySelector('.delete');

            closeButton.addEventListener('click', function () {
                notification.remove(); 
            });

            setTimeout(function () {
                notification.remove(); 
            }, 5000);
        });
    });
</script>
