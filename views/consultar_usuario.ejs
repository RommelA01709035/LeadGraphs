<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultar Usuarios</title>
    <!-- Enlace a Bulma CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    <style>
        /* Estilo personalizado para la sombra de la tabla */
        .table-shadow {
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Ajusta los valores según prefieras */
        }

        /* Estilo personalizado para cambiar el color de los botones */
        .custom-button {
            background-color: #F649D0;
            color: white;
            transition: background-color 0.3s ease; /* Transición suave del color de fondo */
        }

        /* Cambia el color de fondo cuando se pasa el cursor sobre el botón */
        .custom-button:hover {
            background-color: #F8C9EE; /* Cambia el color a un tono más claro */
            color: white;
        }

        /* Estilos para el contenedor del formulario */
        #contenedor-formulario {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            z-index: 100;
        }

        /* Estilos para el formulario dentro del contenedor */
        #formulario-modificar {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
        }
    </style>
</head>
<body>
    <section class="section">
        <div class="container">
            <h1 class="title">Consultar Usuarios</h1>
            <!-- Agrega la clase "table-shadow" para aplicar la sombra a la tabla -->
            <table class="table is-bordered is-striped is-fullwidth table-shadow">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Teléfono</th>
                        <th>ID</th>
                        <th class="is-narrow">Acciones</th> <!-- Columna para botones de acciones -->
                    </tr>
                </thead>
                <tbody>
                    <% usuario.forEach(user => { %>
                        <tr>
                            <td><%= user.nombre_usuario %></td>
                            <td><%= user.Correo %></td>
                            <td><%= user.Celular %></td>
                            <td><%= user.IDUsuario %></td>
                            <td class="is-narrow">
                                <!-- Botones para modificar y eliminar un usuario -->
                                <a href="#" class="boton-modificar">Modificar Usuario</a>
                                <!-- Contenedor que cubre toda la tabla -->
                                <div id="contenedor-formulario" style="margin-top: -50px;">
                                    <div class="columns is-centered has-text-centered is-centered is-vcentered">
                                        <div class="column is-three-quarters" id="formulario-modificar">
                                            <div class="select is-rounded is-medium">
                                                <form class="box" action="/modify-usuario" method="POST">
                                                    <div class="field">
                                                        <label class="label">Nombre</label>
                                                        <div class="control">
                                                            <input class="input" type="text" name="nombre" placeholder="Nombre">
                                                        </div>
                                                    </div>
                                                    <div class="field">
                                                        <label class="label">Correo</label>
                                                        <div class="control">
                                                            <input class="input" type="email" name="correo" placeholder="Correo">
                                                        </div>
                                                    </div>
                                                    <div class="field">
                                                        <label class="label">Teléfono</label>
                                                        <div class="control">
                                                            <input class="input" type="tel" name="telefono" placeholder="Teléfono">
                                                        </div>
                                                    </div>
                                                    <input type="hidden" name="id" value="<%= user.IDUsuario %>">
                                                    <div class="field is-grouped">
                                                        <div class="control">
                                                            <button class="button is-link" type="submit">Guardar cambios</button>
                                                        </div>
                                                        <div class="control">
                                                            <button type="button" class="button is-danger" id="cerrar-formulario">Cerrar</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                
                                <button class="button custom-button"><a href="">Eliminar Usuario</a></button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </section>
    
<% function getMonthName(monthNumber) { %>
    <% const months = [
        "January", "February", "March", "April", "May", "June",
        "July", "August", "September", "October", "November", "December"
    ]; %>
    <%= months[monthNumber - 1] %>
<% } %>
</body>
</html>
<script>
    // Obtener el botón "Modificar Usuario"
    const botonModificar = document.querySelector('.boton-modificar');

    // Obtener el contenedor del formulario
    const contenedorFormulario = document.getElementById('contenedor-formulario');

    // Obtener el botón de cerrar formulario
    const cerrarFormulario = document.getElementById('cerrar-formulario');

    // Agregar un evento de clic al botón "Modificar Usuario"
    botonModificar.addEventListener('click', function() {
        // Mostrar el contenedor del formulario
        contenedorFormulario.style.display = 'block';
    });

    // Agregar un evento de clic al botón de cerrar formulario
    cerrarFormulario.addEventListener('click', function() {
        // Ocultar el contenedor del formulario
        contenedorFormulario.style.display = 'none';
    });
</script>
